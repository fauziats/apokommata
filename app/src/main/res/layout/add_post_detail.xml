<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFFFFF">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:paddingTop="30dp"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/gallery_small_1"
                    android:background="#F0F0F0"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_margin="5dp"
                    />
                <ImageView
                    android:id="@+id/gallery_small_2"
                    android:background="#F0F0F0"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_margin="5dp"
                    />
                <ImageView
                    android:id="@+id/gallery_small_3"
                    android:background="#F0F0F0"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_margin="5dp"
                    />
                <ImageView
                    android:id="@+id/gallery_small_4"
                    android:background="#F0F0F0"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_margin="5dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="425dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/square_white_bluborder"
        android:padding="20dp">
        <TextView
            android:text="Donation Detail"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/post_name"
            android:hint="Item's Name"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp">
            <Spinner
            android:id="@+id/post_category"
            android:hint="Category"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="gravity" />
        </LinearLayout>
        <EditText
            android:id="@+id/stuff_desc"
            android:hint="Description"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp">
            <Spinner
                android:id="@+id/time_left"
                android:hint="Duration"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="gravity" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp">
            <Spinner
                android:id="@+id/shipment_method"
                android:hint="Shipment Method"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="gravity" />
        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_done"
        android:background="@drawable/circle_pink"
        android:src="@drawable/btn_done"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:padding="2dp"
        android:layout_marginTop="580dp"
        android:layout_marginRight="20dp"
        />
</FrameLayout>