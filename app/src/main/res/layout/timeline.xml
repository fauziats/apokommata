<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFFFFF">
    <ImageView
        android:src="@drawable/square_blue"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        />

    <Button
        android:id="@+id/search_btn"
        android:background="@drawable/search_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="6dp"/>
    <Button
        android:id="@+id/notif_btn"
        android:background="@drawable/ic_notifications_black_24dp"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="350dp"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <ImageView
                    android:id="@+id/postpic_timeline"
                    android:src="@drawable/post_pic_ex"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:src="@drawable/square_black2"
                    android:layout_width="match_parent"
                    android:layout_height="240dp" />
                <ImageView
                    android:id="@+id/pp_tiny"
                    android:src="@drawable/ic_person_black_24dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/circle_black"
                    android:padding="8dp"/>
                <TextView
                    android:id="@+id/user_fullname"
                    android:text="Mutia Andani"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="80dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/post_name"
                    android:text="Sepatu Bola"
                    android:textSize="26sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="180dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/interest_button"
                    android:src="@drawable/int_btn"
                    android:background="@drawable/circle_pink"
                    android:layout_marginTop="165dp"
                    android:layout_marginLeft="320dp"
                    android:layout_width="52dp"
                    android:layout_height="52dp" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
    <ImageButton
        android:id="@+id/add_post"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="560dp"
        android:src="@drawable/add_btn"
        android:background="@drawable/circle_blue"
        android:layout_width="64dp"
        android:layout_height="64dp" />
</FrameLayout>