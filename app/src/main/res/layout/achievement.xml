<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/square_blue"
        android:gravity="center"
        android:text="Badge"
        android:textAlignment="gravity"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/badge_1"
                    android:text="Achievement 1"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:background="@drawable/square_blue_rounded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingBottom="64dp"
                    android:paddingRight="135dp" />
                <ImageView
                    android:src="@drawable/achieve_icon"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    />
                <ImageView
                    android:id="@+id/ach_1_stat"
                    android:src="@drawable/ach_not_done"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="340dp"
                    android:layout_marginTop="8dp"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/badge_2"
                    android:text="Achievement 2"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:background="@drawable/square_blue_rounded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingBottom="64dp"
                    android:paddingRight="135dp"
                    android:layout_marginTop="10dp"/>
                <ImageView
                    android:src="@drawable/achieve_icon"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="17dp"
                    />
                <ImageView
                    android:id="@+id/ach_2_stat"
                    android:src="@drawable/ach_done"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="340dp"
                    android:layout_marginTop="17dp"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/badge_3"
                    android:text="Achievement 3"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:background="@drawable/square_blue_rounded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingBottom="64dp"
                    android:paddingRight="135dp"
                    android:layout_marginTop="10dp"/>
                <ImageView
                    android:src="@drawable/achieve_icon"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="17dp"
                    />
                <ImageView
                    android:id="@+id/ach_3_stat"
                    android:src="@drawable/ach_done"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="340dp"
                    android:layout_marginTop="17dp"
                    />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>