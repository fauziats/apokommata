                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/pp_tiny"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/person_medium" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/interested_user_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Fauzi Atsalatsa"
                        android:textColor="@color/colorPrimary"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/loc_interested_user_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Yogyakarta"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/karma_interested_user_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$ 250"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/deny_btn"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:background="@drawable/circle_pink"
                        android:src="@drawable/cancel_white" />

                    <ImageButton
                        android:id="@+id/accept_btn"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/circle_blue"
                        android:src="@drawable/btn_done" />
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>

